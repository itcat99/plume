{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "src/*.d.ts"]
}
